{
  "compileOnSave": true,
  "compilerOptions": {
    "outDir": "./dist",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": true,
    "declarationDir": "./",
    "jsx": "react",
    "module": "commonjs",
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "removeComments": false,
    "sourceMap": true,
    "target": "es5"
  },
  "filesGlob": [
      "**/*.ts",
      "**/*.tsx",
      "!node_modules/**"
  ],
  "exclude": [
    "node_modules",
    "test"
  ]
}